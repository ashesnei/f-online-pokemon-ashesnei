import React from 'react';

class Pokedex extends React.Component {
    render() {
        return (
            <div>
            {
                this.props.pokemonList < 1 ?
                    <h1>cargando...</h1>
                    :
                    <ul className="pokeList">
                        {
                            this.props.pokemonList.map(pokemon => {
                               return  <p>nombre de pokemon</p>

                            })
                        }
                    </ul>
            }
            </div>
        )
    }
}

export default Pokedex;